""" Tests for greenland.argvparsing
"""

from  greenland.testing2      import *
from  greenland.stringsystems import *

class SingALong ( StringSystem ):
    pass


@suite
class Basic(Tests):
    
    @test
    def demo(self,expect,**more):
        
        lala = SingALong()

        lala.LALI      = "lali"
        lala.LALILALUE = "{LALI} lalue {LALI} lalue"
        lala.LALALA    = "lalala lalala la"
        lala.song      = "{LALALA} ich bin {LALALA} so toll {LALALA}. {LALILALUE} {LALILALUE}"

        expected = 'lalala lalala la ich bin lalala lalala la so toll lalala lalala la. lali lalue lali lalue lali lalue lali lalue'
        
        expect( lambda: lala.song ) .returns ( expected )
        
if __name__ == '__main__': execute_suites_and_report()
