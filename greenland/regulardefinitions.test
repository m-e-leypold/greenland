""" Tests for greenland.argvparsing
"""

from  greenland.testing2           import *
from  greenland.regulardefinitions import *


@suite
class Basic(Tests):
    
    @test
    def demo(self,expect,**more):

        rx,ex = regular_definitions()

        ex.DIGS2 = "[0-9]{2}"
        ex.DIGS4 = "[0-9]{4}"

        rx.YEAR  = "{{DIGS4}}"
        rx.MONTH = "{{DIGS2}}", int
        rx.DAY   = "{{DIGS2}}", int

        rx.DATE  = "{{YEAR}}-{{MONTH}}-{{DAY}}"

        date = rx.DATE.match("2014-09-13")
    
        expect( lambda: date.fields ) \
            .returns ( {'DATE': '2014-09-13', 'YEAR': '2014', 'MONTH': 9, 'DAY': 13} )

        expect( lambda: date.YEAR  ) .returns( "2014" )
        expect( lambda: date.MONTH ) .returns( 9      )
        expect( lambda: date.DAY )   .returns( 13     )
                
if __name__ == '__main__': execute_suites_and_report()
